<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fcf="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:background="#ffffff"
    android:orientation="vertical" >

    <com.ranlib.customfancycoverflow.CustomFancyCoverFlow
        android:id="@+id/custom_fancy"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:gravity="center"
        fcf:actionDistance="auto"
        fcf:maxRotation="45"
        fcf:scaleDownGravity="0.8"
        fcf:unselectedAlpha="0.35"
        fcf:unselectedSaturation="1"
        fcf:unselectedScale="0.65" />

</LinearLayout>